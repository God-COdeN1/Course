# exemple_4
def sum(a, b):
    sum_ = a + b
    return sum_

x = 5
y = 3
result = sum(x, y)
print(result)  # Виведе: 8

# exemple_5
def greeting(name, department='general'):
    message = f"Hello, {name}! Welcome to the {department} department."
    return message

general_greeting = greeting("Maria")
department_greeting = greeting("Ivan", "HR")
print(general_greeting) # Вивід: Hello, Maria! Welcome to the general department.
print(department_greeting) # Вивід: Hello, Ivan! Welcome to the HR department.