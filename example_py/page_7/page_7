# exemple_1
import math

x = 4.7
y = -2.3

# Обчислення абсолютного значення
abs_x = abs(x)
abs_y = abs(y)
print(f"Абсолютне значення x: {abs_x}")
print(f"Абсолютне значення y: {abs_y}")

# Обчислення квадратного кореня
sqrt_x = math.sqrt(x)
print(f"Квадратний корінь x: {sqrt_x}")

# Обчислення синуса, косинуса та тангенса
sin_x = math.sin(x)
cos_y = math.cos(y)
tan_x = math.tan(x)
print(f"Синус x: {sin_x}")
print(f"Косинус y: {cos_y}")
print(f"Тангенс x: {tan_x}")

# Обчислення експоненти та логарифмів
exp_x = math.exp(x)
log_x = math.log(x)
log10_y = math.log10(abs_y)
print(f"Експонента x: {exp_x}")
print(f"Натуральний логарифм x: {log_x}")
print(f"Логарифм за основою 10 y: {log10_y}")

# Округлення числа
rounded_x = round(x)
rounded_y = round(y)
print(f"Округлене значення x: {rounded_x}")
print(f"Округлене значення y: {rounded_y}")

